@model Tereshenko_crossplatform1.Models.Tereshenko_Car

<div class="container">
    <h1>Удалить машину</h1>

    <p><strong>Марка:</strong> @Model.Make</p>
    <p><strong>Модель:</strong> @Model.Model</p>
    <p><strong>Год:</strong> @Model.Year</p>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-delete">Удалить</button>
        <a class="btn btn-add" asp-action="Index">Отмена</a>
    </form>
</div>
